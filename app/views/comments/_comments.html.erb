 
  <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
    
    <% @post.comments.reverse_each do |comment| %>
      <div class="row align-items-center">
        <div class="col">
          <div id="comment-<%= comment.id %>" class="comment-card bg-light mb-3 p-2 d-flex justify-content-between">


            <div class="comment-body">
               <%= comment.user.first_name %> <%= comment.user.last_name %>:
               <br>
               <%= comment.body %>
            </div>
            <% if policy(comment).edit? || policy(comment).destroy? %>
              <div class="dropdown show my-auto">
                <div class="col">
                  <div class="dropdown-icon">
                    <a class="dropdown align-middle " href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v"></i>
                    </a>
                  
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                    <% if policy(comment).edit? %>
                      <%= link_to " Edit", [comment.post, comment], :class => 'fas fa-edit dropdown-item'%>
                    <% end %>
                    <% if policy(comment).destroy? %>
                      <%= link_to ' Delete', [comment.post, comment], method: :delete, remote: true, data: {confirm: 'Are you sure you would like to delete your comment?'}, :class => 'dropdown-item fas fa-trash' %>
                    <% end %>
                    <!-- <a class="dropdown-item fas fa-flag" href="#"> Report</a> -->
                  </div>
                </div>
                </div>
              </div>
            <% end %>




          </div>
        </div>
      </div>
    <% end %>

      


