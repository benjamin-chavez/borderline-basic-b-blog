<%= render "shared/banner" %>
<div class="row banner-padding">
  <div class="col">
    <div class="d-flex justify-content-around">
      <div class="home-posts">
        <% @posts.each do |post| %>
          <div class="individual-post mb-4 pb-5">
            <h3 class="post-title"><%= link_to post.title , post_path(post), {:class => 'header' } %></h3>
            <div class="post-text">
              <p class="mb-0" ></p><%= sanitize post.body.truncate(2500) %></p>
              <div class="text-right">
                <div  class=""> <%= link_to 'Continue Reading' , post_path(post), {:class => 'btn bb-btn btn-sm btn-outline-primary' } %> </div>
              </div>
            </div>  
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



