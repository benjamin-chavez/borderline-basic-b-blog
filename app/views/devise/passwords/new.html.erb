<%= render "shared/banner" %>

<div class="row d-flex justify-content-center">
  <div class="col-sm-12 col-md-8 col-lg-5">
    <div class="form-login">
      <h2 class="text-center pt-3">Reset password</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-inputs">
        <%= f.input :email,
                    label: false,                    
                    required: true,
                    autofocus: true,
                    placeholder: "Email",
                    input_html: { autocomplete: "email" } %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Send reset link", :class => "btn btn-outline-primary" %>
      </div>
      <% end %>
      <div class="row d-flex justify-content-around py-3">
        <span class="col-5 align-middle"> <hr align="center"> </span>
        <span class="text-muted">or</span>
        <span class="col-5 align-middle"> <hr align="center"> </span>
      </div>   
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

