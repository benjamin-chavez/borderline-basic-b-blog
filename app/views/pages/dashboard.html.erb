<%= render "shared/banner" %>

<div class="table-card mt-5 mb-3 ">
  <table class="table table-striped dashboard-table mb-0">
    <thead class="thead-dark">
      <tr class="d-flex text-center">
        <th class="col-1" scope="col"></th>
        <th class="col-3" scope="col">Post</th>
        <th class="col-3" scope="col">Published</th>
        <!-- <th class="col-2" scope="col">View</th> -->
        <th class="col-2" scope="col">Edit</th>
        <th class="col-2" scope="col">Delete</th>
        <th class="col-1" scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr class="d-flex text-center">
          <th class="col-1" scope="col"></th>
          <th class="col-3" scope="row"><%= link_to post.title, post_path(post), {:style => "color: black;" } %></th>
          <% if post.draft? %>
            <td class="col-3"> Draft </td>
          <% else %>
            <td class="col-3"> <%= post.publish_date.strftime("%B %d, %Y") %> </td>
          <% end %>
          <!-- <td class="col-2"> <%= link_to 'View', post_path(post), {:class => '' } %> </td>  -->
          <td class="col-2"> <%= link_to 'Edit Post', edit_post_path(post), {:"data-turbolink" => false}  %> </td>
          <td class="col-2"> <%= link_to "Delete Post", post_path(post), method: :delete, remote: true, data: {confirm: "Are you sure you would like to delete this post?"}, :style => 'color: red'%> </td>
          <th class="col-1" scope="col"></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

